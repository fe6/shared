{
  "name": "@water/shared",
  "description": "水滴共享函数集",
  "version": "1.0.0",
  "scripts": {
    "start": "npm-run-all --parallel \"dev\" serve open",
    "dev": "node script/dev.js",
    "serve": "serve",
    "open": "open http://localhost:5000/demo",
    "lint:eslint": "eslint --ext .ts src/**",
    "lint:format": "prettier --require-pragma false --insert-pragma false --write --parser typescript \"src/*.ts\"",
    "lint": "run-p lint:*",
    "test": "jest",
    "codecov": "codecov ./coverage/clover.xml",
    "bc": "run-p lint test",
    "tsc": "tsc",
    "preinstall": "node ./script/check-yarn.js"
  },
  "main": "index.js",
  "module": "dist/shared.esm-bundler.js",
  "types": "dist/shared.d.ts",
  "unpkg": "dist/shared.global.js",
  "jsdelivr": "dist/shared.global.js",
  "repository": "git@github.com:iq9891/shared.git",
  "author": "李梦龙 <649076408@qq.com>",
  "buildOptions": {
    "name": "waterShared",
    "formats": [
      "esm-bundler",
      "cjs",
      "global",
      "esm-browser"
    ]
  },
  "files": [
    "index.js",
    "types",
    "dist"
  ],
  "keywords": [
    "water",
    "shared",
    "@water/shared"
  ],
  "engines": {
    "node": ">=10.0.0"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@fe6/norm": "^2.1.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "@rollup/plugin-replace": "^2.3.4",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/parser": "^4.14.2",
    "brotli": "^1.3.2",
    "chalk": "^4.1.0",
    "codecov": "^3.8.1",
    "eslint": "^7.19.0",
    "execa": "^5.0.0",
    "fs-extra": "^9.1.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "minimist": "^1.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rollup": "^2.38.4",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "serve": "^11.3.2",
    "ts-jest": "^26.5.0",
    "typescript": "^4.1.3",
    "zlib": "^1.0.5"
  }
}
